<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtMessage"
        android:background="@drawable/bubble_incoming"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/content_min_margin"
        android:layout_gravity="start"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingLeft="@dimen/message_bubble_start"
        android:paddingStart="@dimen/message_bubble_start"
        android:paddingRight="@dimen/message_bubble_end"
        android:paddingEnd="@dimen/message_bubble_end"
        android:paddingTop="@dimen/message_bubble_vertical"
        android:paddingBottom="@dimen/message_bubble_vertical"
        android:text="Medium Text"/>

</LinearLayout>